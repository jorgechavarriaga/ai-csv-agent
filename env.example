# On local use POSTGRES_HOST=localhost, with Docker use POSTGRES_HOST=db
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_db

# Switch to True to create tables on startup (initial seeding)
ENABLE_FORCE_SEED=False

# OpenAI API key (required for AI features)
OPENAI_API_KEY=your_api_key

# Connection string template (replace USER/PWD/DB accordingly)
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
